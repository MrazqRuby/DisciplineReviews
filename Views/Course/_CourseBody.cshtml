@model DisciplineReviews.Models.Course

<ul class="nav nav-tabs">
  <li class="active">
    <a href="#_Overview" class="loadTabContent">Overview</a>
  </li>
  <li><a href="#_Reviews" class="loadTabContent">Reviews</a></li>
  <li><a href="#_Materials" class="loadTabContent">Materials</a></li>
  
</ul>

<div id="tab_content">@Html.Action("_CourseReview", Model)</div>

<script>
	$(".loadTabContent").on("click", function() {
		var attr = $(this).attr('href');
		$(this).parent().parent().find("li").removeClass("active");  
            $(this).parent().addClass("active");
		console.log(attr);
		$.ajax({
			type: "POST",
			url: "/Course/" + attr ,
			context:this,
			success: function(msg){
				$("#tab_content").html(msg);
			}
		});
	});		
</script>

